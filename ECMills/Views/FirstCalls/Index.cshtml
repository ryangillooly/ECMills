@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="col-md-8 col-12 mr-auto ml-auto">
        <!--      Wizard container        -->
        <div class="wizard-container">
            <div class="card card-wizard active" data-color="rose" id="wizardProfile">
                <form action=""  novalidate="novalidate">
                    <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
                    <div class="card-header text-center">
                        <h3 class="card-title">
                            First Call
                        </h3>
                        <h5 class="card-description">Log a Clients First Call</h5>
                    </div>
                    <div class="wizard-navigation">
                        <ul class="nav nav-pills">
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link active" href="#calldetails" data-toggle="tab" role="tab">
                                    Call Details
                                </a>
                            </li>
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link" href="#deceasedperson" data-toggle="tab" role="tab">
                                    Deceased Person
                                </a>
                            </li>
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link" href="#contactdetails" data-toggle="tab" role="tab">
                                    Contact Details
                                </a>
                            </li>
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link" href="#appointment" data-toggle="tab" role="tab">
                                    Appointment
                                </a>
                            </li>
                        </ul>
                        <div class="moving-tab" style="width: 187.5px; transform: translate3d(-8px, 0px, 0px); transition: transform 0s ease 0s;">
                            Call Details
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="calldetails">
                                <div class="row justify-content-center">
                                    <div class="col-lg-10" style="padding-top: 30px;">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Job Type</label>
                                                            <div class="dropdown bootstrap-select">
                                                                <div class="dropdown bootstrap-select">
                                                                    <select class="selectpicker" data-size="7" data-style="select-with-transition" title="" tabindex="-98">
                                                                        <option value="Funeral"> Funeral </option>
                                                                        <option value="FuneralPlan"> Sundry</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>



                                                    <div class="col-md-3">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Job Sub Type</label>
                                                            <div class="form-control"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Title</label>
                                                            <div class="form-control"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Forename(s)</label>
                                                            <div class="form-control"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Surname</label>
                                                            <div class="form-control"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Relationship To Deceased</label>
                                                            <div class="form-control"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Deceased Picked Up From</label>
                                                            <div class="form-control"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="card" style="box-shadow: none !important;">
                                                            <div class="card-header" style="padding: 0;">
                                                                <h4 class="card-title">Contact Points</h4>

                                                            </div>
                                                            <div class="card-body" style="padding: 0;/* padding-right: 0; */">
                                                                <div class="toolbar">
                                                                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                                                                </div>
                                                                <div class="material-datatables">
                                                                    <table id="datatables" class="table table-hover" cellspacing="0" style="width:100%">
                                                                        <thead>
                                                                            <tr>
                                                                                <th style="padding-left: 0;">Type</th>
                                                                                <th style="padding-left: 0;">Value</th>
                                                                                <th class="disabled-sorting text-right">Actions</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <tr>
                                                                                <td style="padding: 0;">E-Mail</td>
                                                                                <td style="padding: 0;">RyanGillooly@hotmail.co.uk</td>
                                                                                <td class="text-right" style="padding: 0;">
                                                                                    <a href="#" class="btn btn-link btn-danger btn-just-icon remove"><i class="material-icons">close</i></a>
                                                                                </td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td style="padding: 0;">Mobile Phone</td>
                                                                                <td style="padding: 0;">07415835716</td>
                                                                                <td class="text-right" style="padding: 0;">
                                                                                    <a href="#" class="btn btn-link btn-danger btn-just-icon remove"><i class="material-icons">close</i></a>
                                                                                </td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td style="padding: 0;">Home Phone</td>
                                                                                <td style="padding: 0;">01236 612854</td>
                                                                                <td class="text-right" style="padding: 0;">
                                                                                    <a href="#" class="btn btn-link btn-danger btn-just-icon remove"><i class="material-icons">close</i></a>
                                                                                </td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <div class="form-group bmd-form-group">
                                                                <label class="bmd-label-floating">Additional Notes</label>
                                                                <textarea class="form-control" rows="3"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="deceasedperson">
                                <div class="row justify-content-center">
                                    <div class="col-lg-10">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Name</label>
                                                            <div class="form-control" id="ReadOnlyInput-Name"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Known As</label>
                                                            <div class="form-control" id="ReadOnlyInput-Known_As"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Gender</label>
                                                            <div class="form-control" id="ReadOnlyInput-Gender"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Age</label>
                                                            <div class="form-control" id="ReadOnlyInput-Age"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Date of Birth</label>
                                                            <div class="form-control" id="ReadOnlyInput-DOB"></div>

                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Date/Time of Death</label>
                                                            <div class="form-control" id="ReadOnlyInput-TimeOfDeath"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Marital Status</label>
                                                            <div class="form-control" id="ReadOnlyInput-MaritalStatus"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Occupation</label>
                                                            <div class="form-control" id="ReadOnlyInput-Occupation"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Religion</label>
                                                            <div class="form-control" id="ReadOnlyInput-Religion"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-static">Religious Denomination</label>
                                                            <div class="form-control" id="ReadOnlyInput-RelDom"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="mr-auto">
                            <input type="button" class="btn btn-previous btn-fill btn-default btn-wd disabled" name="previous" value="Previous">
                        </div>
                        <div class="ml-auto">
                            <input type="button" class="btn btn-next btn-fill btn-rose btn-wd" name="next" value="Next">
                            <input type="button" class="btn btn-finish btn-fill btn-rose btn-wd" name="finish" value="Finish" style="display: none;">
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>
        </div>
        <!-- wizard container -->
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
          // Initialise the wizard
          demo.initMaterialWizard();
          setTimeout(function() {
            $('.card.card-wizard').addClass('active');
          }, 600);
        });
    </script>
}