@using ECMills.Models;
@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="col-md-8 col-12 mr-auto ml-auto">
        <!--      Wizard container        -->
        <div class="wizard-container">
            <div class="card card-wizard active" data-color="rose" id="wizardProfile">
                <form action="" method="" novalidate="novalidate">
                    <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
                    <div class="card-header text-center">
                        <h3 class="card-title">
                            First Call
                        </h3>
                        <h5 class="card-description">Log a Clients First Call</h5>
                    </div>
                    <div class="wizard-navigation">
                        <ul class="nav nav-pills">
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link active" href="#calldetails" data-toggle="tab" role="tab">
                                    Call Details
                                </a>
                            </li>
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link" href="#deceasedperson" data-toggle="tab" role="tab">
                                    Deceased Person
                                </a>
                            </li>
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link" href="#contactdetails" data-toggle="tab" role="tab">
                                    Contact Details
                                </a>
                            </li>
                            <li class="nav-item" style="width: 25%;">
                                <a class="nav-link" href="#appointment" data-toggle="tab" role="tab">
                                    Appointment
                                </a>
                            </li>
                        </ul>
                        <div class="moving-tab" style="width: 187.5px; transform: translate3d(-8px, 0px, 0px); transition: transform 0s ease 0s;">
                            Call Details
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="calldetails">
                                <div class="row justify-content-center">
                                    <div class="col-xl-10 col-lg-11 col-md-12 ml-auto mr-auto">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-xl-8 col-lg-10 col-md-10 col-sm-12">
                                                    <div class="row">
                                                        <div class="col-md-5 col-sm-6">
                                                            <div class="form-group bmd-form-group">
                                                                <label class="bmd-label-static">Job Type</label>
                                                                <div class="dropdown bootstrap-select">
                                                                    <div class="dropdown bootstrap-select" style="text-transform: none !important;">
                                                                        <select class="selectpicker" data-size="7" data-style="select-with-transition" title="" tabindex="-98">
                                                                            <option value="Funeral"> Funeral </option>
                                                                            <option value="FuneralPlan"> Sundry</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-5 col-sm-6">
                                                            <div class="form-group bmd-form-group">
                                                                <label class="bmd-label-static">Job Sub Type</label>
                                                                <div class="dropdown bootstrap-select">
                                                                    <div class="dropdown bootstrap-select" style="text-transform: none !important;">
                                                                        <select class="selectpicker" data-size="7" data-style="select-with-transition" title="" tabindex="-98">
                                                                            <option value="Funeral"> Funeral </option>
                                                                            <option value="FuneralPlan"> Funeral Plan </option>
                                                                            <option value="Cremation"> Cremation </option>
                                                                            <option value="DirectCremation"> Direct Cremation </option>
                                                                            <option value="Sundry"> Sundry </option>
                                                                            <option value="Transport"> Transport </option>
                                                                            <option value="Quote"> Quote </option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xl-11 col-lg-12">
                                                    <div class="row">
                                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-4">
                                                            <div class="form-group bmd-form-group">
                                                                <label class="bmd-label-static">Title</label>
                                                                <div class="dropdown bootstrap-select">
                                                                    <div class="dropdown bootstrap-select" style="text-transform: none !important;">
                                                                        <select class="selectpicker" data-size="7" data-style="select-with-transition" title="" tabindex="-98">
                                                                            <option class="bs-title-option" value=""></option>
                                                                            <option value="Mr"> Mr </option>
                                                                            <option value="Mrs"> Mrs </option>
                                                                            <option value="Miss"> Miss </option>
                                                                            <option value="Ms"> Ms. </option>
                                                                            <option value="Miss"> Miss </option>
                                                                            <option value="Doctor"> Doctor </option>
                                                                            <option value="Nurse"> Nurse </option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xs-8">
                                                            <div class="form-group bmd-form-group">
                                                                <label class="bmd-label-static">Forename(s)</label>
                                                                <input name="Name" type="text" class="form-control" placeholder="" />
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-xs-12">
                                                            <div class="form-group bmd-form-group">
                                                                <label class="bmd-label-static">Surname</label>
                                                                <input name="Name" type="text" class="form-control" placeholder="" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="row">
                                                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                                                            <div class="form-group bmd-form-group">
                                                                <div class="form-group select-wizard bmd-form-group">
                                                                    <label class="bmd-label-static">Contacts</label>
                                                                    <div class="dropdown bootstrap-select">
                                                                        <div class="dropdown bootstrap-select" style="text-transform: none !important;">
                                                                            <select class="selectpicker" data-size="7" data-style="select-with-transition" title="Type" tabindex="-98">
                                                                                <option class="bs-title-option" value=""></option>
                                                                                <option value="Funeral"> Home Phone </option>
                                                                                <option value="FuneralPlan"> Mobile Phone </option>
                                                                                <option value="Cremation"> E-Mail </option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
                                                            <div class="form-group bmd-form-group">
                                                                <label class="bmd-label-static">Value</label>
                                                                <input name="Name" type="text" class="form-control" placeholder="" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group select-wizard bmd-form-group">
                                                        <label class="bmd-label-static">Relationship To Deceased</label>
                                                        <div class="dropdown bootstrap-select">
                                                            <div class="dropdown bootstrap-select" style="text-transform: none !important;">
                                                                <select class="selectpicker" data-size="7" data-style="select-with-transition" title="" tabindex="-98">
                                                                    <option value="Funeral">  </option>
                                                                    <option value="Funeral"> Son </option>
                                                                    <option value="FuneralPlan"> Daughter </option>
                                                                    <option value="FuneralPlan"> Father </option>
                                                                    <option value="Cremation"> Mother </option>
                                                                    <option value="Cremation"> Doctor </option>
                                                                    <option value="Cremation"> Nurse </option>
                                                                    <option value="Cremation"> Other </option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group select-wizard bmd-form-group">
                                                        <label class="bmd-label-static">Deceased Source</label>
                                                        <div class="dropdown bootstrap-select">
                                                            <div class="dropdown bootstrap-select" style="text-transform: none !important;">
                                                                <select class="selectpicker" data-size="7" data-style="select-with-transition" title="" tabindex="-98">
                                                                    <option value="Funeral">  </option>
                                                                    <option value="Funeral"> Home </option>
                                                                    <option value="FuneralPlan"> Hospice </option>
                                                                    <option value="FuneralPlan"> Care Home </option>
                                                                    <option value="Cremation"> Hospital </option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <div class="form-group bmd-form-group">
                                                            <label class="bmd-label-floating">Additional Notes</label>
                                                            <textarea class="form-control" rows="3"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="deceasedperson">
                                <h5 class="info-text"> What are you doing? (checkboxes) </h5>
                                <div class="row justify-content-center">
                                    <div class="col-lg-10">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <div class="choice" data-toggle="wizard-checkbox">
                                                    <input type="checkbox" name="jobb" value="Design">
                                                    <div class="icon">
                                                        <i class="fa fa-pencil"></i>
                                                    </div>
                                                    <h6>Design</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="choice" data-toggle="wizard-checkbox">
                                                    <input type="checkbox" name="jobb" value="Code">
                                                    <div class="icon">
                                                        <i class="fa fa-terminal"></i>
                                                    </div>
                                                    <h6>Code</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="choice" data-toggle="wizard-checkbox">
                                                    <input type="checkbox" name="jobb" value="Develop">
                                                    <div class="icon">
                                                        <i class="fa fa-laptop"></i>
                                                    </div>
                                                    <h6>Develop</h6>
                                                </div>
                                                <div class="dropdown bootstrap-select">
                                                    <select class="selectpicker" data-style="btn btn-primary btn-round" title="Single Select" data-size="7" tabindex="-98">
                                                        <option class="bs-title-option" value=""></option>
                                                        <option disabled="" selected="">Choose city</option>
                                                        <option value="2">Foobar</option>
                                                        <option value="3">Is great</option>
                                                    </select><button type="button" class="dropdown-toggle btn btn-primary btn-round" data-toggle="dropdown" role="button" title="Choose city"><div class="filter-option"><div class="filter-option-inner"><div class="filter-option-inner-inner">Choose city</div></div> </div></button><div class="dropdown-menu " role="combobox"><div class="inner show" role="listbox" aria-expanded="false" tabindex="-1"><ul class="dropdown-menu inner show"></ul></div></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="contactdetails">
                                <div class="row justify-content-center">
                                    <div class="col-sm-12">
                                        <h5 class="info-text"> Are you living in a nice area? </h5>
                                    </div>
                                    <div class="col-sm-7">
                                        <div class="form-group bmd-form-group">
                                            <label class="bmd-label-static">Street Name</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group bmd-form-group">
                                            <label class="bmd-label-static">Street No.</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group bmd-form-group">
                                            <label class="bmd-label-static">City</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group select-wizard">
                                            <label>Country</label>
                                            <div class="dropdown bootstrap-select">
                                                <select class="selectpicker" data-size="7" data-style="select-with-transition" title="Single Select" tabindex="-98">
                                                    <option class="bs-title-option" value=""></option>
                                                    <option value="Afghanistan"> Afghanistan </option>
                                                    <option value="Albania"> Albania </option>
                                                    <option value="Algeria"> Algeria </option>
                                                    <option value="American Samoa"> American Samoa </option>
                                                    <option value="Andorra"> Andorra </option>
                                                    <option value="Angola"> Angola </option>
                                                    <option value="Anguilla"> Anguilla </option>
                                                    <option value="Antarctica"> Antarctica </option>
                                                </select><button type="button" class="btn dropdown-toggle bs-placeholder select-with-transition" data-toggle="dropdown" role="button" title="Single Select"><div class="filter-option"><div class="filter-option-inner"><div class="filter-option-inner-inner">Single Select</div></div> </div></button><div class="dropdown-menu " role="combobox"><div class="inner show" role="listbox" aria-expanded="false" tabindex="-1"><ul class="dropdown-menu inner show"></ul></div></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="mr-auto">
                            <input type="button" class="btn btn-previous btn-fill btn-default btn-wd disabled" name="previous" value="Previous">
                        </div>
                        <div class="ml-auto">
                            <input type="button" class="btn btn-next btn-fill btn-rose btn-wd" name="next" value="Next">
                            <input type="button" class="btn btn-finish btn-fill btn-rose btn-wd" name="finish" value="Finish" style="display: none;">
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>
        </div>
        <!-- wizard container -->
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
          // Initialise the wizard
          demo.initMaterialWizard();
          setTimeout(function() {
            $('.card.card-wizard').addClass('active');
          }, 600);
        });
    </script>
}