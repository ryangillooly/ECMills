<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-rose card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">assignment</i>
                    </div>
                    <h4 class="card-title">Invoice Items</h4>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                        <button type="button" id="additem" data-toggle="modal" style="background-color: #f7f7f7;" rel="tooltip" title="" class="btn btn-success btn-link btn-sm" data-original-title="Add New Arrangement">
                            <i class="material-icons">add</i>
                        </button>
                        <button type="button" onclick="EditArrangements()" style="background-color: #f7f7f7;" rel="tooltip" title="" class="btn btn-primary btn-link btn-sm" data-original-title="Edit Existing Arrangement">
                            <i class="material-icons">edit</i>
                        </button>
                        <button type="button" style="background-color: #f7f7f7;" rel="tooltip" title="" class="btn btn-danger btn-link btn-sm" data-original-title="Remove Existing Arrangement">
                            <i class="material-icons">close</i>
                        </button>
                    </div>
                    <div class="material-datatables">
                        <table class="datatables table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width: 10% !important;">Charge</th>
                                    <th class="order-sm-last" style="width: 50% !important;">Description</th>
                                    <th style="width: 8% !important;">Price (£)</th>
                                    <th style="width: 8% !important;">VAT (£)</th>
                                    <th style="width: 8% !important;">total (£)</th>
                                    <th style="width: 8% !important;">Cost (£)</th>
                                    <th style="width: 8% !important;" class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--********** TEST DATA **********-->
                                @{
                                    for (int i = 0; i < 14; i++)
                                    {
                                        <tr>
                                            <td>Professional Attention</td>
                                            <td>
                                                <p>
                                                    To our Professional Attention throughout the arrangements including the arrangement interview; use of our Chapel of Rest & Facilities; dealing with correspondence; administration of all documents and disbursements; supervising the funeral and the attendance  of our Funeral Director Mr. Roger Mills at the committal service.
                                                </p>
                                            </td>
                                            <td>1,066.00</td>
                                            <td>0.00</td>
                                            <td>1,066.00</td>
                                            <td>1,066.00</td>
                                            <td class="text-right">
                                                <button type="button" style="background-color: #f7f7f7;" rel="tooltip" class="btn btn-danger btn-link btn-sm remove">
                                                    <i class="material-icons">close</i>
                                                    <div class="ripple-container"></div>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                <!--*******************************-->
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            MyJS.initMaterialDatatables();
        });
    </script>
}