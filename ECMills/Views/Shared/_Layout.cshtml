<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <link rel="apple-touch-icon" sizes="76x76" href="~/Assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Assets/img/favicon.png">

    <title>ECMills Ltd.</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

    @Styles.Render("~/MainCSS")
    @RenderSection("css", required: false)
</head>
<body>
    <div class="wrapper">
        @{
            if (ViewContext.RouteData.Values["Controller"].ToString() == "Arrangement" &&
                    ViewContext.RouteData.Values["Action"].ToString() != "List")
            {
                @Html.Partial("ArrangementSideBar");
            }
            else
            {
                @Html.Partial("HomeSideBar");
            }
        }
        <div class="main-panel">
            @Html.Partial("NavBar")
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    @Html.Partial("ThemeChangePlugin")
    

    @Scripts.Render("~/CoreJS")
    @Scripts.Render("~/MaterialJS")

    <script>
        $(document).ready(function () {
            MyJS.initSidebar();
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
